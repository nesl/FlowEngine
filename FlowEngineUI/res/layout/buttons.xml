<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FlowEngine Service" />
        <ToggleButton
            android:id="@+id/toggle_flowengine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometer Service" />
        <ToggleButton
            android:id="@+id/toggle_accelerometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FlowMBedEngine Service" />
        <ToggleButton
            android:id="@+id/toggle_flowmbed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Service" />
        <ToggleButton
            android:id="@+id/toggle_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    
</ScrollView>
