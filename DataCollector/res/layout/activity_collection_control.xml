<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ToggleButton
        android:id="@+id/toggle_collection_control"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:onClick="onToggleCollectionControl"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textOff="Start today&apos;s data collection."
        android:textOn="Finish today&apos;s data collection." />

    <TextView
        android:id="@+id/hidden_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>